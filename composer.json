{
    "name": "ricklab/location",
    "type":"library",
    "description":"A library of PHP objects for spatial calculations",
    "keywords": [
        "location",
        "geo-location",
        "geolocation",
        "gis",
        "geo location",
        "geospatial"
    ],
    "license":"BSD-3-Clause",
    "authors":[{
        "name":"Rick Ogden",
        "email":"rick@rickogden.com",
        "homepage":"http://www.rickogden.com",
        "role":"developer"
    }],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^7.5|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Ricklab\\Location\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ricklab\\Location\\": "tests/"
        }
    }
}
